<div class="page-header">
<h1>Users</h1>
<ul class="nav nav-list">
  <li>  <%= link_to "Home", root_path %> </li>
</ul>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |p| %>
      <tr>
        <td><%= p.full_name %></td>
        <td>
      <%= simple_form_for @friend do |f| %>
  <%= f.input :approved, :as => :hidden %>
    <%= f.association :follower, :as => :hidden  %>
    <%= f.association :primary_user, :as => :hidden %>
  <%= f.submit "Follow" %>
<% end %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>
